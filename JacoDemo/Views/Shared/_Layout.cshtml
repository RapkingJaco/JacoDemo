<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JacoDemo</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JacoDemo.styles.css" asp-append-version="true" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .flex-fill {
            flex: 1;
        }

        .navbar {
            background-color: #333;
            padding: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar a {
            color: white;
            text-decoration: none;
            padding: 14px 20px;
            font-size: 16px;
        }

        .navbar a:hover {
            background-color: #ddd;
            color: black;
        }

        .login-btn {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
            margin-right: 20px;
        }

        .login-btn:hover {
            background-color: #45a049;
        }

        .navbar .left, .navbar .right {
            display: flex;
            align-items: center;
        }

        .navbar .center {
            display: flex;
            justify-content: center;
            flex: 1;
        }

        .navbar .right {
            margin-left: auto;
            margin-right: 20px;
        }

        .navbar .left img {
            height: 40px;
            margin-right: 10px;
        }

        .navbar .left a {
            color: white;
            font-size: 20px;
            font-weight: bold;
            text-transform: uppercase;
            text-decoration: none;
        }

        .navbar .left a:hover {
            color: #4CAF50;
        }

        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px;
        }

        footer p {
            margin: 0;
        }

        .dropdown-menu {
            background-color: white;
            color: black;
            border: 1px solid #ccc;
        }

        .dropdown-menu .dropdown-item {
            color: black;
        }

        .dropdown-menu .dropdown-item:hover {
            background-color: #f1f1f1;
            color: black;
        }
    </style>
</head>
<body>
    <div class="wrapper d-flex flex-column min-vh-100">

        <!-- 導覽欄 -->
        <div class="navbar">
            <div class="left">
                <a href="/home">JacoBank</a>
            </div>

            <div class="center">
                <a href="#about">關於我們</a>
                <a href="#support">客服中心</a>
                <a href="#contact">服務據點</a>
            </div>

            <div class="right">
                @if (Context.User.Identities.Any(i => i.IsAuthenticated))
                {
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="text-white me-3">您好，@Context.User.Identity.Name</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" href="/banktransinfo/index">交易查詢</a></li>
                            <li><a class="dropdown-item" href="/transfer/index">資金轉帳</a></li>
                            <li><a class="dropdown-item" href="/customer/index">更改基本資料</a></li>
                            <li><a class="dropdown-item text-danger" href="#" id="logoutBtn">登出</a></li>
                        </ul>
                    </div>
                }
                else
                {
                    <a href="/login" class="login-btn">登入</a>
                }
            </div>
        </div>

        <!-- 主內容區域 -->
        <div class="container flex-fill">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <!-- Footer -->
        <footer>
            <p>© 2025 JacoBank. All rights reserved.</p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const logoutBtn = document.getElementById("logoutBtn");
            if (logoutBtn) {
                logoutBtn.addEventListener("click", function (e) {
                    e.preventDefault();
                    Swal.fire({
                        title: '確定要登出嗎？',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: '是的，登出',
                        cancelButtonText: '取消'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = "/login/logout";
                        }
                    });
                });
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
