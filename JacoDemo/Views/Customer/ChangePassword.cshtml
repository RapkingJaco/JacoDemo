@model JacoDemo.Models.CustomerChagePwdRequestModel;
@{
    ViewData["Title"] = "ChangePassword";
}

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>變更密碼</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .container {
            width: 100%;
            max-width: 600px;
            margin: 50px auto;
            padding: 30px;
            background-color: #fff;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-size: 14px;
            color: #333;
            display: block;
            margin-bottom: 5px;
        }

        input {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

            input[type="submit"] {
                background-color: #4CAF50;
                color: white;
                cursor: pointer;
                border: none;
                font-size: 16px;
                padding: 12px 20px;
                margin-top: 10px;
            }

                input[type="submit"]:hover {
                    background-color: #45a049;
                }

        .form-footer {
            text-align: center;
            margin-top: 20px;
        }

            .form-footer a {
                color: #4CAF50;
                text-decoration: none;
            }

                .form-footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>

    <!-- 變更密碼表單容器 -->
    <div class="container">
        <h1>變更密碼</h1>
        <!-- 變更密碼表單 -->
        <form asp-controller="Customer" asp-action="ChangePassword" method="POST">
            <!-- 舊密碼 -->
            <div class="form-group">
                <label for="old_password">舊密碼</label>
                <input type="password" id="OldPassword" asp-for="OldPassword" required placeholder="輸入舊密碼">
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>

            <!-- 新密碼 -->
            <div class="form-group">
                <label for="new_password">新密碼</label>
                <input type="password" id="NewPassword" asp-for="NewPassword" required placeholder="輸入新密碼">
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <!-- 確認密碼 -->
            <div class="form-group">
                <label for="confirm_password">確認密碼</label>
                <input type="password" id="ConfirmPassword" asp-for="ConfirmPassword" required placeholder="確認新密碼">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <input type="submit" value="變更密碼" class="btn btn-primary" />
        </form>
    </div>
</body>
</html>



