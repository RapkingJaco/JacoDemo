@{
    ViewData["Title"] = "網路銀行首頁";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .carousel-caption {
        bottom: 30% !important;
    }

    /* 第一張圖的文字格式 */
    .carousel-item-1 h4 {
        font-size: 1.6rem; /* 調小字體大小 */
        color: black;
        text-shadow: 2px 2px 4px rgba(255, 255, 255, 0.7);
    }

    .carousel-item-1 p {
        font-size: 1.2rem; /* 調小字體大小 */
        color: black;
    }

    /* 第二張圖的文字格式 */
    .carousel-item-2 h4 {
        font-size: 2rem;
        color: black;
        text-shadow: 2px 2px 4px rgba(255, 255, 255, 0.7);
    }

    .carousel-item-2 p {
        font-size: 1.6rem;
        color: black;
    }

    /* 第三張圖的文字格式 */
    .carousel-item-3 h4 {
        font-size: 3rem;
        color: black;
        text-shadow: 2px 2px 4px rgba(255, 255, 255, 0.7);
    }

    .carousel-item-3 p {
        font-size: 1.8rem;
        color: black;
    }

    .intro-section {
        background-color: #f8f9fa;
        padding: 40px 0;
        margin-top: 30px;
        width: 100%; /* 讓區塊寬度自動填滿父容器 */
        max-width: 1200px; /* 設定一個最大寬度限制，防止在大螢幕上過寬 */
        margin-left: auto;
        margin-right: auto;
    }

    .intro-header {
        font-size: 2.5rem;
        font-weight: bold;
        color: #007bff;
    }

    .intro-text {
        font-size: 1.1rem;
        color: #555;
        margin-bottom: 20px;
    }

    .feature-box {
        background-color: #ffffff;
        border: 1px solid #ddd;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        margin-bottom: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .feature-icon {
        font-size: 3rem;
        color: #007bff;
    }

    .feature-title {
        font-size: 1.2rem;
        font-weight: bold;
        color: #007bff;
        margin-top: 15px;
    }

    .feature-description {
        font-size: 1rem;
        color: #555;
    }
</style>

<div class="container mt-5">
    <!-- 廣告區塊 -->
    <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
        <!-- 廣告圖片輪播區塊 -->
        <div class="container mt-5">
            <div id="assetCarousel" class="carousel slide shadow rounded" data-bs-ride="carousel">
                <div class="carousel-inner">

                    <!-- 第一張圖 -->
                    <div class="carousel-item active">
                        <img src="~/images/HomepageBanner1_1920x475_20250327.jpg" class="d-block w-100 rounded" alt="第一張圖">
                        <div class="carousel-caption d-none d-md-block carousel-item-1">
                            <h4>期間限定 韓瘋刷</h4>
                            <p>指定月亮卡/百合卡最高10%</p>
                        </div>
                    </div>

                    <!-- 第二張圖 -->
                    <div class="carousel-item">
                        <img src="~/images/HomepageBanner2_1920x475_20250327.jpg" class="d-block w-100 rounded" alt="第二張圖">
                        <div class="carousel-caption d-none d-md-block carousel-item-2">
                            <h4>春遊換匯好禮連發</h4>
                            <p>月月送Point 5000點</p>
                        </div>
                    </div>

                    <!-- 第三張圖 -->
                    <div class="carousel-item">
                        <img src="~/images/HomepageBanner3_1920x475_20250327.jpg" class="d-block w-100 rounded" alt="第三張圖">
                        <div class="carousel-caption d-none d-md-block carousel-item-3">
                            <h4>美元年息最高 <strong>7%</strong></h4>
                            <p>匯好利換匯外幣定存專案</p>
                        </div>
                    </div>
                </div>

                <!-- 左右箭頭 -->
                <button class="carousel-control-prev" type="button" data-bs-target="#assetCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">上一張</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#assetCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">下一張</span>
                </button>

                <!-- 底部點點 -->
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#assetCarousel" data-bs-slide-to="0" class="active"></button>
                    <button type="button" data-bs-target="#assetCarousel" data-bs-slide-to="1"></button>
                    <button type="button" data-bs-target="#assetCarousel" data-bs-slide-to="2"></button>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

        <!-- ... 你的圖片輪播程式碼 ... -->
    </div>

    <!-- 系統簡介區塊 -->
    <div class="intro-section">
        <div class="container">
            <h2 class="intro-header text-center">系統簡介</h2>
            <p class="intro-text text-center">
                我們的網路銀行系統提供安全、便捷的銀行服務。無論您需要轉帳、查詢餘額、還是管理帳戶，這裡都有您所需要的功能。立即體驗數位銀行的便捷與安全！
            </p>

            <!-- 主要功能介紹 -->
            <div class="row">
                <div class="col-md-4">
                    <div class="feature-box">
                        <div class="feature-icon">
                            <img src="~/images/banner_s.jpg" style="width: 100%; height: auto;" />
                        </div>
                        <h4 class="feature-title">資金轉帳</h4>
                        <p class="feature-description">輕鬆轉帳，立即將資金轉移到其他帳戶</p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="feature-box">
                        <div class="feature-icon">
                            <img src="~/images/p099dmrp.jpg" style="width: 100%; height: auto;" />
                        </div>
                        <h4 class="feature-title">帳戶管理</h4>
                        <p class="feature-description">管理您的帳戶和交易，隨時隨地查詢餘額與明細</p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="feature-box">
                        <div class="feature-icon">
                            <img src="~/images/03h538mnqfb3chvlitlszum-13.jpg" style="width: 100%; height: auto;" />
                        </div>
                        <h4 class="feature-title">高安全性保障</h4>
                        <p class="feature-description">全方位的加密技術與多重認證，保障您的金融安全</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
    @if (TempData["PasswordChangeMessage"] != null)
    {
        <text>
                        Swal.fire({
                        icon: 'success',
                        title: '密碼變更成功！',
                        text: '@Html.Raw(TempData["PasswordChangeMessage"])',
                        confirmButtonColor: '#3085d6',
                        confirmButtonText: '知道了'
                    });
        </text>
    }
    });
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
