@model JacoDemo.Models.LoginRequestModel;
@{
    ViewData["Title"] = "Index";
}
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea, #764ba2);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-container {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
        }

        .form-control {
            border-radius: 20px;
        }

        .btn-primary {
            border-radius: 20px;
            background: #667eea;
            border: none;
        }

            .btn-primary:hover {
                background: #764ba2;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <h3 class="text-center">歡迎回來!</h3>
        <p class="text-center text-muted">登入以繼續</p>
        <form method="post" asp-controller="Login" asp-action="VerifyUser">
            <div class="mb-3">
                <label class="form-label">電子信箱</label>
                <input type="email" id="email" asp-for="Account" class="form-control" required placeholder="輸入電子信箱">
                <span asp-validation-for="Account" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">密碼</label>
                <input type="password" id="password" asp-for="Password" class="form-control" required placeholder="輸入密碼">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">登入</button>
            </div>
        </form>
        <p class="text-center mt-3">
            <a href="#" class="text-muted">忘記密碼?</a>
            <a href="/login/CustomerRegister" class="text-muted">註冊帳號</a>
            <a href="/home">回到首頁</a>
        </p>
    </div>
</body>


</html>

